<h1><%=@restaurant.name%></h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>
  <%= f.submit "add a review", class: "btn btn-success" %>
<% end %>

<%= link_to @restaurant do %>
  <button class="btn btn-primary my-3"><i class="fas fa-arrow-left"></i></button>
<% end %>

